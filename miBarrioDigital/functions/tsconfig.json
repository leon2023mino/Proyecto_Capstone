{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017"],
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true, 
    "rootDir": "src",
    "types": ["node"]
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["../src", "../node_modules", "../../node_modules"]
}
